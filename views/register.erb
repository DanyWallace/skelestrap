<div class="columns">
<div class="column is-5 is-offset-3 box">
<form method="post" action="/register" class="form">
    <div class="control">
        <label class="label">Username</label>
        <input class ="input" type="text" name="username">
        <p class="help">make it edgy</p>
    </div>
    <div class="control">
        <label class="label">Password</label>
        <input class ="input" type="password" name="userpassword">
    </div>    <div class="control">
        <label class="label">Retype Password</label>
        <input class ="input" type="password" name="userpasswordconfirm">
    </div>
    <div class="control">
    	<label class="label">Email</label>
    	<input class ="input" type="text" name="useremail">
    </div>
    <div class="control">
    	<label class="label">You sure? </label>
        <input class ="input" type="text" name="usernotinsecure">
        <span class="help">if sure type "yeah"</span>
    </div>
    <center>
        <span>
            <h1>Thank you for your soul</h1>
        </span>
        <button type="submit" class="button is-info is-outlined">Submit</button>
    </center>
</form>
        <% if @error %>
        <center>
            <span class="tag is-danger separatee"> Nope </span>
        </center>
        <center>
            <span> <%= @message %> </span>
        </center>
        <% end %>
</div>
</div>